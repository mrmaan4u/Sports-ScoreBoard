{
  "name": "Sports-ScoreBoard",
  "version": "1.0.0",
  "description": "A sports scoreboard web app built on ES6, React, and Node.jsâ€”features MLB, NBA, NFL, NHL, and MLS games.",
  "main": "server.js",
  "scripts": {
    "dev": "env UV_THREADPOOL_SIZE=100 webpack-dev-server --progress --colors",
    "server": "nodemon server.js",
    "start": "yarn dev | yarn server",
    "wake:code": "code . && open http://localhost:8080 && yarn start",
    "wake:vim": "vim . && open http://localhost:8080 && yarn start",
    "wake:atom": "atom . && open http://localhost:8080 && yarn start",
    "build": "yarn bust && NODE_ENV='production' webpack -p --progress --colors",
    "wipe": "rm -rf node_modules && yarn",
    "lint": "eslint app/.; exit 0",
    "fix": "eslint --fix app/.; exit 0",
    "bust": "rm -rf dist/**/*/bundle.*",
    "images": "find ./dist/assets -name '*.svg' -type f -exec svgo '{}' \\;",
  },
  "author": "Gurujot Singh",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.16.2",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "firebase": "^4.1.1",
    "moment": "^2.17.1",
    "moment-timezone": "^0.5.11",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-ga": "^2.2.0",
    "react-icons": "^2.2.3",
    "react-router": "^3.0.2",
    "velocity-react": "^1.2.2",
    "webfontloader": "^1.6.27",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "browser-sync": "^2.18.7",
    "browser-sync-webpack-plugin": "^1.1.4",
    "compression-webpack-plugin": "^0.4.0",
    "css-loader": "^0.28.4",
    "css-mqpacker": "^6.0.1",
    "dotenv": "^4.0.0",
    "duplicate-package-checker-webpack-plugin": "^1.2.4",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-react": "^7.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
